{
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",

    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@nexigen/*": ["src/*"]
    }
  },

  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
